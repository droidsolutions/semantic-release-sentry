{
  "name": "@droidsolutions-oss/semantic-release-sentry",
  "version": "2.0.28",
  "description": "Semantic release plugin to create Sentry releases",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "lint": "eslint --ext ts,js .",
    "build": "tsc",
    "test": "jest"
  },
  "keywords": [
    "Sentry",
    "semantic-release",
    "semantic",
    "release",
    "plugin"
  ],
  "author": "Stefan IÃŸmer <stefan.issmer@droidsolutions.de>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/droidsolutions/semantic-release-sentry.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=15.14.0"
  },
  "dependencies": {
    "@sentry/cli": "^2.0.2",
    "execa": "^5.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "@swc-node/jest": "1.4.3",
    "@types/aggregate-error": "1.0.1",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.24",
    "@types/semantic-release": "17.2.3",
    "@typescript-eslint/eslint-plugin": "5.35.1",
    "@typescript-eslint/parser": "5.35.1",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "26.8.7",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "8.0.1",
    "jest": "27.5.1",
    "jest-circus": "27.5.1",
    "lint-staged": "12.3.7",
    "prettier": "2.6.2",
    "semantic-release": "19.0.2",
    "typescript": "4.6.3"
  },
  "lint-staged": {
    "*.[js,ts,json,md,yml]": "prettier --write",
    "*.[js,ts]": "eslint --ext ts,js"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "beta",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/**/*.ts"
    ],
    "coverageReporters": [
      "lcov",
      "html",
      "text"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc-node/jest",
        {
          "dynamicImport": true
        }
      ]
    },
    "testEnvironment": "node",
    "testMatch": null,
    "testRegex": "test/.*\\.test.ts$",
    "testRunner": "jest-circus/runner"
  }
}
