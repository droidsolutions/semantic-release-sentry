{
  "name": "@droidsolutions/semantic-release-sentry",
  "version": "1.4.1",
  "description": "Semantic release plugin to create Sentry releases",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "Sentry",
    "semantic-release",
    "semantic",
    "release",
    "plugin"
  ],
  "author": "Stefan IÃŸmer <stefan.issmer@droidsolutions.de>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https@gitlab.droidnet.de:droidsolutions/semantic-release/semantic-release-sentry.git"
  },
  "publishConfig": {
    "registry": "https://npm.droidnet.de"
  },
  "dependencies": {
    "@sentry/cli": "^1.63.1",
    "execa": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "12.0.1",
    "@commitlint/config-conventional": "12.0.1",
    "@droidsolutions/semantic-release-publish-npm": "1.1.4",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "semantic-release": "17.4.2"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "release": {
    "extends": "@droidsolutions/semantic-release-publish-npm"
  },
  "renovate": {
    "extends": [
      "@droidsolutions:shareableconfig",
      ":assignee(stefanissmer)"
    ]
  }
}
